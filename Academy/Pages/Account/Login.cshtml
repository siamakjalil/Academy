@page
@model LoginModel

@{
    ViewData["Title"] = "ورود به حساب کاربری";
}


<div class="row justify-content-md-center">
    <div class="col-md-5 col-lg-5 col-12">
        <div class="card shadow">
            <div class="card-body">
                <section class="card-text">
                    <form id="account" method="post"> 
                        <div>
                            <label asp-for="Input.UserName">نام کاربری: </label>
                            <input type="text" asp-for="Input.UserName" class="form-control" autocomplete="off"
                                    placeholder="نام کاربری" />
                            <span asp-validation-for="Input.UserName" class="text-danger"></span>
                        </div>
                        <div>
                            <label asp-for="Input.Password">کلمه عبور: </label>
                            <input type="password" asp-for="Input.Password" class="form-control" autocomplete="off"
                                    placeholder="کلمه عبور" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="d-grid gap-2 mt-3 mb-3">
                            <button class="btn btn-primary" id="submit-btn" type="submit">ورود</button>
                        </div> 
                    </form>
                </section>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
