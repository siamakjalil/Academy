@page

@model Academy.Pages.Admin.Teachers.UpsertModel
@{
    ViewData["Title"] = "مدیریت اساتید";
    Layout = "/Pages/Shared/_AdminLayout.cshtml";
}
@section BreadCrumb{
    <li class="breadcrumb-item"><a href="/Admin/Teachers">لیست اساتید</a></li>
    <li class="breadcrumb-item active" aria-current="page">افزودن ، ویرایش استاد</li>
}
<div class="row justify-content-md-center">
    <div class="col-md-12 col-lg-12 col-12">
        <div class="card shadow">
            <h5 class="card-header">افزودن استاد</h5>
            <div class="card-body">
                <section class="card-text">
                    <form id="account" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Teacher.Id" />  
                        <div class="row mb-3">   
                            <div class="col-lg-4 col-md-6 col-12 mb-3">
                                <label asp-for="Teacher.FirstName">نام : </label>
                                <input type="text" asp-for="Teacher.FirstName" class="form-control" autocomplete="off"
                                       placeholder="نام" />
                                <span asp-validation-for="Teacher.FirstName" class="text-danger"></span>
                            </div>
                            <div class="col-lg-4 col-md-6 col-12 mb-3">
                                <label asp-for="Teacher.LastName">نام خانوادگی: </label>
                                <input type="text" asp-for="Teacher.LastName" class="form-control" autocomplete="off"
                                       placeholder="نام خانوادگی" />
                                <span asp-validation-for="Teacher.LastName" class="text-danger"></span>
                            </div>  
                            <div class="col-lg-3 col-md-3 col-12 mb-3 mt-3 text-center">
                                <div class="d-grid gap-2 mt-3"> 
                                    <button class="btn btn-primary" type="submit">ثبت</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </section>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

